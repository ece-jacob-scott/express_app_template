<%- include('../layouts/form-header', { title: 'Login' }) %>

<main class="form-holder mui-panel">
  <form action="/login" method="POST">
    <h1>Login</h1>
    <% if (messages.error) { %>
    <p style="color: red; font-size: 0.8em">*<%= messages.error %></p>
    <% } %>
    <div class="mui-textfield">
      <input
        type="text"
        placeholder="Username:"
        id="username"
        name="username"
      />
    </div>

    <div class="mui-textfield">
      <input
        type="password"
        placeholder="Password:"
        id="password"
        name="password"
      />
    </div>

    <input type="hidden" id="_csrf" name="_csrf" value="<%= _csrf %>" />
    <button class="mui-btn mui-btn--raised mui-btn--primary" type="submit">
      Login
    </button>
    <a style="float: right" href="/register">or register</a>
  </form>
</main>
